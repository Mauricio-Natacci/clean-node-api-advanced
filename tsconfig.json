{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"target": "es2022",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@/tests/*": ["../tests/*"],
		},
	},
	"strict": true,
	"include": ["src"]
}
