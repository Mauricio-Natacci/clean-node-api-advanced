{
	"compilerOptions": {
			"outDir": "dist",
			"module": "commonjs",
			"target": "es2019",
			"lib": ["es2020", "esnext"],
			"esModuleInterop": true,
			"strict": true,
			"sourceMap": true,
			"rootDirs": ["src", "tests"],
			"baseUrl": "src",
			"paths": {
				"@/*": ["*"],
				"@/tests/*": ["../tests/*"]
			},
			"useUnknownInCatchVariables": false,
			},
		"include": [ "src", "tests" ],
}